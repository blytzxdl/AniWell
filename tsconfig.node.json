{
    "compilerOptions": {
        "target": "ESNext",
        "composite": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "jsx": "preserve",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@s/*": ["electron/server/*"],
            "@v/*": ["src/*"]
        }
    },
    "include": ["package.json", "electron", "vite.config.ts"]
}
